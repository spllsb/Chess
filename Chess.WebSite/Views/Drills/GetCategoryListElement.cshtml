@using Chess.Infrastructure.DTO
@model IEnumerable<DrillDto>

@{
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Dosis:400,700" rel="stylesheet" />
    <link rel="img" asp-href-include="~/lib/chessboardjs/img/chesspieces/wikipedia/*.png" />
    <link href="~/lib/chessboardjs/css/chessboard-1.0.0.css" rel="stylesheet" />
    <link href="~/css/chess_game.css" rel="stylesheet"/>
}


<div class="container">
    <div class="row">
        <div class="col-sm-9">
            <main>
                @foreach(var item in Model)
                {
                <article class="drills__list__item container">
                    <div class="drills__list__item__board drills__finished container-fluid col-sm-4">
                        <div class="drills__icon">
                        </div>
                            <div id="@("drills__board_"+item.Name)"  style="width: 100%">
                            </div>
                    </div>
                    <div class="drills__list__item__details col-sm-8">
                        <a asp-action="GetChessDrill"  asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                        <div class="drills__list__item__description">
                            @Html.DisplayFor(modelItem => item.Description)
                        </div>
                    </div>
                </article>
                }
            </main>
        </div>
        <aside class="col-sm-3">
            <div class="card">
                <div class="card-header">Header</div>
                <div class="card-body">Content</div>
                <div class="card-footer">Footer</div>
            </div>
        </aside>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="~/lib/chessjs/chess.js"></script>
    <script src="~/lib/chessboardjs/js/chessboard-1.0.0.js"></script>
    <script src="~/js/chess_training.js"></script>
}
