@using Chess.Infrastructure.DTO
@model DrillDto

@{
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Dosis:400,700" rel="stylesheet" />
    <link rel="img" asp-href-include="~/lib/chessboardjs/img/chesspieces/wikipedia/*.png" />
    <link href="~/lib/chessboardjs/css/chessboard-1.0.0.css" rel="stylesheet" />
    <link href="~/css/chess_game.css" rel="stylesheet"/>
}

<span id="currentPlayer">Jakis gracz1</span>
<div id="basicUsage">00:00:00</div>

<div>HELLO WORLD</div>
    <div class="row">
        <div id="layout__main" class="col-lg-9">
            <div id="chessboard"></div>
        </div>
        <div id="layout__sidebar" class="col-lg-3 ">
            <div class="game__controls__component">
                <p>
                    @Html.DisplayFor(modelItem => @Model.Name)
                </p>
                <div class="game__controls__wrapper ">
                    @* moves list content *@
                </div>
                <div class="section_wrapper "> 
                    <div>
                         <button type="button" class="fas fa-chevron-left fa-ls fa-3x"></button>
                        <button type="button" class="fas fa-chevron-right fa-3x"></button>
                    </div>
                    <div class="section_icon">
                        <i class="fas fa-retweet fa-2x"></i>
                        <i class="fas fa-download fa-2x"></i>
                        <i class="fas fa-share-alt fa-2x"></i>
                    </div>
                </div>
                <div class="about_player player_bottom">
                </div>
            </div>
        </div>
    </div>
</div>
<div id="PGN" style="padding: 50px;">

@Html.HiddenFor(x => x.StartPosition);

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="~/lib/chessjs/chess.js"></script>
    <script src="~/lib/chessboardjs/js/chessboard-1.0.0.js"></script>
    <script src="~/js/chess_game_v2.js"></script>

}




