@using Chess.Infrastructure.DTO
@model DrillDto

@{
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Dosis:400,700" rel="stylesheet" />
    <link rel="img" asp-href-include="~/lib/chessboardjs/img/chesspieces/wikipedia/*.png" />
    <link href="~/lib/chessboardjs/css/chessboard-1.0.0.css" rel="stylesheet" />
    <link href="~/css/chess_game.css" rel="stylesheet"/>
}

@Model.Name
@Model.StartPosition


<div class="row">
        <div id="layout__main" class="col-md-9">
            <div id="chessboard"></div>
        </div>

        <div id="layout__sidebar" class="col-md-3">
            <div class="game__controls__component">
                <p>
                    @Html.DisplayFor(modelItem => @Model.Name)
                </p>
                <div class="game__controls__wrapper">
                    <div id="vertical__move__list__component">
                        <div class="vertical__move__list__element" >
                            <div class="vertical__move__list__element__move col-2"><span>1.</span></div>
                            <span class="vertical__move__list__element__move col-5 vertical__move__list__element__move__clickable">Q3</span>
                            <span class="vertical__move__list__element__fen">r1bqkbnr/pppp1ppp/2n5/1B2p3/4P3/5N2/PPPP1PPP/RNBQK2R</span>
                            <span class="vertical__move__list__element__move col-5 vertical__move__list__element__move__clickable">P2</span>
                        </div>
                        <div class="vertical__move__list__element" >
                            <div class="vertical__move__list__element__move col-2"><span>1.</span></div>
                            <span class="vertical__move__list__element__move col-5 vertical__move__list__element__move__clickable">T3</span>
                            <span class="vertical__move__list__element__fen">rnbqkbnr/pppppppp/8/8/5P2/8/PPPPP1PP/RNBQKBNR</span>
                            <span class="vertical__move__list__element__move col-5 vertical__move__list__element__move__clickable">P3</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>



@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="~/lib/chessjs/chess.js"></script>
    <script src="~/lib/chessboardjs/js/chessboard-1.0.0.js"></script>
    <script src="~/js/chess_training.js"></script>
}




