@using Chess.Infrastructure.DTO
@model TournamentDetailsDto

<style>

</style>


@Model.Name
@Model.MaxPlayers


<div>
    
</div>


<!-- Tournaments -->
<table class="table">
    <thead>
        <tr>
            <th>
                PlayerId
            </th>
            <th>
                Username
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Players) {
        <tr>
            <td>
                <a asp-controller="Match" asp-action="GetPlayerMatch" asp-route-id="@item.PlayerId">@Html.DisplayFor(modelItem => item.PlayerId)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
        </tr>
}
    </tbody>
</table>