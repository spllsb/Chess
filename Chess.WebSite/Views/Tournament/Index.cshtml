@using Chess.Infrastructure.DTO
@model IEnumerable<TournamentDto>

<h1>@ViewBag.Title</h1>

@if(@ViewBag.StatusCode == "success"){
<h1 class="alert-success">@ViewBag.Message </h1>
}

<!-- Tournaments -->
<div class="card">
    <div class="card-header">
        Lista turniejów
    </div>
    <div class="card-body">
        <form asp-controller="Tournament" asp-action="Index" method="get">
            <p>
                Turniej: <input type="text" name="SearchString">
                <input type="submit" value="Filter" />
            </p>
        </form>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MaxPlayers)
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-tournamentId="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a> 
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaxPlayers)
                        </td>
                        <td>
                            <a asp-action="Join" asp-route-tournamentId="@item.Id">Dołącz</a>
                        </td>
                    </tr>
            }
            </tbody>
        </table>
    </div>
</div>

   