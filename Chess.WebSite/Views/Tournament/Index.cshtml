@using Chess.Infrastructure.DTO
@model IEnumerable<TournamentDto>

<h1>@ViewBag.Title</h1>

@if(@ViewBag.StatusCode == "success"){
<h1 class="alert-success">@ViewBag.Message </h1>
}

<!-- Tournaments -->
<div class="card">
    <div class="card-header">
        Lista turniejów
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MaxPlayers)
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                    <tr asp-action="Details" asp-route-name="@item.Name">
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaxPlayers)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-name="@item.Name">Dołącz</a>
                        </td>
                    </tr>
            }
            </tbody>
        </table>
    </div>
</div>

   