@using Chess.Infrastructure.DTO
@model TournamentDetailsDto


<div class="card">
  <div class="card-body">
    <h5 class="card-title">Informacje o turnieju</h5>
    <h6 class="card-subtitle mb-2 text-muted">Szczegóły</h6>
    <p class="card-text">Tu będzie opis szczegółów gry  </p>
  </div>
</div>


<div class="card">
    <div class="card-header">
        Zapisanie gracze
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Nazwa zawodnika
                    </th>
                    <th>
                        Ranking
                    </th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model.Players) {
                <tr>
                    <td>
                        <a asp-controller="Member" asp-action="Index" asp-route-username="@item.Username">@Html.DisplayFor(modelItem => item.Username)</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>


@await Component.InvokeAsync("MatchList",
new {
    id = @Model.Id,
    fromTable = "tournament"
});


    
