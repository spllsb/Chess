@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css?family=Dosis:400,700" rel="stylesheet" />
<link rel="img" asp-href-include="~/lib/chessboardjs/img/chesspieces/wikipedia/*.png" />
<link href="~/lib/chessboardjs/css/chessboard-1.0.0.css" rel="stylesheet" />
<link href="~/css/chess_game.css" rel="stylesheet"/>
<style>
    .basic::before {
        content: attr(data-timer);
    }
  
  .stopwatch {
    display: inline-block;
    background-color: white;
    border: 1px solid #eee;
    padding: 5px;
    margin: 5px;
  }
  .stopwatch span {
    font-weight: bold;
    display: block;
  }
  .stopwatch a {
    padding-right: 5px;
    text-decoration: none;
  }
  .fas {
      width: 100px;
      height: 50px;
  }

</style>

<div>HELLO WORLD</div>
    <div class="row">
        <div id="layout__main" class="col-lg-9">
            <div class="border__layout_player p-2">
                <div class="border__layout_img"><img src="https://unsplash.it/45/45"></div> 
                <div class="border__layout_usernameDetail"> 
                    <span id="chess_opponent_name">Jakis gracz1</span>
                    <span>(ilosc punktow)</span>
                    <img src="https://unsplash.it/20/20" class="img-fluid">
                </div>
                <div class="clock__component">
                    <div id="clock-top" class="basic stopwatch" data-timer="@ViewBag.ChessGameDuration"></div>
                </div>
            </div>

            <div id="chessboard"></div>
            <div class="border__layout_player p-2">
                <div class="border__layout_img"><img src="https://unsplash.it/45/45"></div> 
                <div class="border__layout_usernameDetail"> 
                    <span id="chess_my_name">@Context.User.Identity.Name</span>
                    <span>(ilosc punktow)</span>
                    <img src="https://unsplash.it/20/20" class="img-fluid">
                </div>
                <div class="clock__component">
                    <div id="clock-bottom" class="basic stopwatch" data-timer="@ViewBag.ChessGameDuration"></div>
                </div>
                
            </div>

        </div>
        <div id="layout__sidebar" class="col-lg-3 ">
            <div class="game__controls__component">
                <div>
                    Jakis typ spotkania
                </div>
                <div class="game__controls__wrapper ">
                    @* moves list content *@
                </div>
                <div class="section_wrapper "> 
                    <div>
                        <button type="button" class="fas fa-chevron-left fa-ls fa-3x"></button>
                        <button type="button" class="fas fa-chevron-right fa-3x"></button>
                    </div>
                    <div class="section_icon">
                        <i class="fas fa-retweet fa-2x"></i>
                        <i class="fas fa-download fa-2x"></i>
                        <i class="fas fa-share-alt fa-2x"></i>
                    </div>
                </div>
                <div class="about_player player_bottom">
                </div>
            </div>
        </div>
    </div>
</div>



<div id="PGN" style="padding: 50px;"></div>
<p id="ChessGameId" hidden>@ViewBag.ChessGameId</p>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="~/lib/chessjs/chess.js"></script>
    <script src="~/lib/chessboardjs/js/chessboard-1.0.0.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chess_game_v2.js"></script>

    <script>
        const chess_mod_selected = chess_mod.LIVE_GAME;
    </script>
}