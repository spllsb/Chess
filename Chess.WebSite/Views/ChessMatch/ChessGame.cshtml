    Layout = "_Layout";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css?family=Dosis:400,700" rel="stylesheet" />
<link rel="img" asp-href-include="~/lib/chessboardjs/img/chesspieces/wikipedia/*.png" />
<link href="~/lib/chessboardjs/css/chessboard-1.0.0.css" rel="stylesheet" />
<link href="~/css/chess_game.css" rel="stylesheet"/>
<style>
  .stopwatch {
    display: inline-block;
    background-color: white;
    border: 1px solid #eee;
    padding: 5px;
    margin: 5px;
  }
  .stopwatch span {
    font-weight: bold;
    display: block;
  }
  .stopwatch a {
    padding-right: 5px;
    text-decoration: none;
  }
</style>

<p><strong>Note:</strong> despite the varying <code>delay</code> settings, each stopwatch displays the correct time (in seconds)</p>

<pre>
var a = document.getElementById("a-timer");
aTimer = new Stopwatch(a);
aTimer.start();
</pre>
<div class="stopwatch" id="a-timer"></div>1 ms<br>
  
<pre>
var b = document.getElementById("b-timer");
bTimer = new Stopwatch(b, {delay: 100});
bTimer.start();
</pre>
<div class="stopwatch" id="b-timer"></div>100 ms<br>
<pre>
var c = document.getElementById("c-timer");
cTimer = new Stopwatch(c, {delay: 456});
cTimer.start();
</pre>
<div class="stopwatch" id="c-timer"></div>456 ms<br>
  
<pre>
var d = document.getElementById("d-timer");
dTimer = new Stopwatch(d, {delay: 1000});
dTimer.start();
</pre>
<div class="stopwatch" id="d-timer"></div>1000 ms<br>
  


<div>HELLO WORLD</div>
    <div class="row">
        <div id="layout__main" class="col-lg-9">
            <div class="border__layout_player p-2">
                <div class="border__layout_img"><img src="https://unsplash.it/45/45"></div> 
                <div class="border__layout_usernameDetail"> 
                    <span id="currentPlayer">Jakis gracz1</span>
                    <span>(ilosc punktow)</span>
                    <img src="https://unsplash.it/20/20" class="img-fluid">
                </div>
                <div class="clock__component">
                    <div id="opponentTimer" data-timer="900">01:00</div>
                </div>
            </div>

            <div id="chessboard"></div>
            <div class="border__layout_player p-2">
