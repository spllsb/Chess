@using Chess.Infrastructure.DTO
@model ClubDetailsDto
@{
  Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<form asp-controller="ClubManagement" asp-action="Edit" method="post" class="form-horizontal p-4">
    <h4>@ViewBag.Title</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <div >
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail" class="control-label"></label>
        <div >
            <input asp-for="ContactEmail" class="form-control" />
            <span asp-validation-for="ContactEmail" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Information" class="control-label"></label>
        <div >
            <input asp-for="Information" class="form-control" />
            <span asp-validation-for="Information" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PictureName" class="control-label"></label>
        <div >
            <input asp-for="PictureName" class="form-control" />
            <span asp-validation-for="PictureName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 text-center">
            <button type="submit" class="btn btn-secondary">Zatwierd≈∫</button>
        </div>
    </div>
</form>
