@using Chess.Infrastructure.Commands.Club
@model CreateClub

@{
  Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="m-auto p-2" style="width: 70%;">
    <form asp-action="Create" class="m-5" method="post" enctype="multipart/form-data">
        <h4 class="text-center">Utworz nowy klub szachowy</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label control-label">Nazwa</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label control-label">Email kontaktowy</label>
            <div class="col-sm-10">
                <input asp-for="ContactEmail" type="email" class="form-control">
                <span asp-validation-for="ContactEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label control-label">Obrazek</label>
            <div class="col-sm-10">
                <input asp-for="ProfileImage" type="file" class="form-control"/>
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label control-label">Informacje</label>
            <div class="col-sm-10">
                <textarea asp-for="Informaction" min="1" max="10" class="form-control"></textarea>
                <span asp-validation-for="Informaction" class="text-danger"></span>
            </div>
        </div>
        @* <div class="col-md-6">  
            <div class="form-group">  
                <label asp-for="ProfileImage" class="control-label"></label>  
                <div class="custom-file">  
                    <input asp-for="ProfileImage" class="custom-file-input" id="customFile">  
                    <label class="custom-file-label" for="customFile">Choose file</label>  
                </div>  
                <span asp-validation-for="ProfileImage" class="text-danger"></span>  
            </div>  
        </div>   *@



        <button class="btn btn-secondary btn-block" type="submit">Zatwierd≈∫</button>
    </form>
</div>
